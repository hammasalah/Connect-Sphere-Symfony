.job-description {
  margin-top: 1.5rem; 
}

.job-description-title {
  color: #4a6da7;
  font-size: 1.1rem;
  font-weight: 600;
  margin-bottom: 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 2px solid #4a6da7;
}

.job-description-text {
  color: #6c757d;
  line-height: 1.6;
}

