.key-info {
  display: flex;
  flex-direction: column;
}

.deadline-info {
  display: flex;
  align-items: flex-start;
  margin-bottom: 1.5rem;
}

.deadline-icon {
  width: 22px;
  height: 22px;
  display: flex;
  align-items: center;
  justify-content: center;
