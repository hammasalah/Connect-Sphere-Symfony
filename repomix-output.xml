.apply-button {
  background-color: #4a6da7;
  color: white;
  border: none;
  border-radius: 6px;
  padding: 0.9rem;
  width: 100%;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  margin-bottom: 1rem;
  transition: background-color 0.2s ease;
}

.apply-button:hover {
  background-color: #3d5a8e;
}

