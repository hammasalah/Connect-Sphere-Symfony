  flex-shrink: 0;
}

.deadline-details {
  display: flex;
  flex-direction: column;
}

.deadline-label {
  font-weight: 600;
  color: #495057;
  margin-bottom: 0.25rem;
}

.deadline-value {
  color: #dc3545;
  font-weight: 600;
}

