        /**
         * Met √† jour l'historique des conversions dans l'interface
         * @param {Object} transaction - La nouvelle transaction √† ajouter
         */
        function updateConversionHistory(transaction) {
            console.log('Mise √† jour de l\'historique avec:', transaction);
            
            // Chercher la table d'historique des conversions
            const historyTables = [
                document.querySelector('.history-table tbody'),
                document.querySelector('table tbody'),
                document.querySelector('.conversion-history tbody')
            ].filter(table => table !== null);
            
            if (historyTables.length === 0) {
                console.warn('Aucune table d\'historique trouv√©e dans la page');
                return;
            }
            
            // Pour chaque table d'historique trouv√©e
            historyTables.forEach(tableBody => {
                // V√©rifier s'il y a un message "Aucune conversion"
                const emptyRow = tableBody.querySelector('tr td[colspan]');
                if (emptyRow) {
                    // Supprimer la ligne "Aucune conversion"
                    emptyRow.parentNode.remove();
                }
                
                // Cr√©er une nouvelle ligne
                const newRow = document.createElement('tr');
                
                // Formater la date
                const formattedDate = transaction.date;
                
                // Ajouter les cellules avec les donn√©es de la transaction
                newRow.innerHTML = `
                    <td>${formattedDate}</td>
                    <td>
                        <span class="currency-badge currency-${transaction.devise.toLowerCase()}">
                            ${transaction.devise}
                        </span>
                    </td>
                    <td>${transaction.pointConvertis}</td>
                    <td>${parseFloat(transaction.montant).toFixed(2)} ${transaction.devise}</td>
                `;
                
                // Ajouter la nouvelle ligne au d√©but de la table
                if (tableBody.firstChild) {
                    tableBody.insertBefore(newRow, tableBody.firstChild);
                } else {
                    tableBody.appendChild(newRow);
                }
            });
        }
        
