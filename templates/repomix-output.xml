                            {% elseif notification.type == 'group_request_rejected' %}
                                <div class="notification-icon group-rejected">
                                    <i class="fas fa-users-slash"></i>
                                </div>
                            {% else %}
                                <div class="notification-icon">
                                    <i class="fas fa-bell"></i>
                                </div>
