    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
        <script>
        let chartInstance = null;
        async function fetchChartDataAndUpdate() {
          const response = await fetch('/api/points/chart-data');
          const data = await response.json();
          // Si aucun point perdu, on force √† z√©ro
          if (data.pointsLost.every(v => v === 0)) {
            data.pointsLost = data.pointsLost.map(() => 0);
          }
          // Calcul dynamique du total perdu
          const totalLost = data.pointsLost.reduce((a, b) => a + b, 0);
          document.querySelectorAll('.summary-value')[1].textContent = totalLost;
          updateChart(data.labels, data.pointsEarned, data.pointsLost);
        }
        function updateChart(labels, pointsEarned, pointsLost) {
          let canvas = document.getElementById('pointChart');
          if (!canvas) canvas = document.getElementById('pointChart2');
          const ctx = canvas.getContext('2d');
          if (chartInstance) chartInstance.destroy();
          chartInstance = new Chart(ctx, {
            type: 'line',
            data: {
              labels: labels,
              datasets: [
                {
                  label: 'Points earned',
                  data: pointsEarned,
                  borderColor: '#1a237e',
                  backgroundColor: 'rgba(26,35,126,0.1)',
                  tension: 0.4,
                  fill: true,
                },
                {
                  label: 'Lost points',
                  data: pointsLost,
                  borderColor: getComputedStyle(document.documentElement).getPropertyValue('--theme-accent-red').trim() || '#FBB6CE',
                  backgroundColor: 'rgba(251,182,206,0.2)',
                  tension: 0.4,
                  fill: true,
                }
              ]
            },
            options: {
              responsive: true,
              plugins: {
                legend: { display: true },
                tooltip: { enabled: true }
              },
              scales: {
                y: { beginAtZero: true }
              }
            }
          });
        }
        fetchChartDataAndUpdate();
        setInterval(fetchChartDataAndUpdate, 10000);
        </script>
