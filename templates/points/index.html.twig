            }
            .activity-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            }
            .activity-card h3 {
                font-size: 1.2rem;
                font-weight: 700;
                color: var(--theme-primary-blue);
                margin-bottom: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 1px;
            }
            .activity-list {
                list-style: none;
