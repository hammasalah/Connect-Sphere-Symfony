            }
            .activity-icon span {
                font-size: 18px;
            }
            .activity-details p {
                font-size: 0.9rem;
                font-weight: 500;
                color: var(--theme-text-dark);
            }
            .activity-details span {
                font-size: 0.8rem;
                color: #6B7280;
            }
    
            /* === Achievements Card === */
            .achievements-card {
                background: linear-gradient(135deg, var(--theme-bg-white), #f9fbfd);
                border-radius: 12px;
                padding: 1.5rem;
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }
            .achievements-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            }
            .achievements-card h3 {
                font-size: 1.2rem;
                font-weight: 700;
                color: var(--theme-primary-blue);
                margin-bottom: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 1px;
            }
            .achievements-list {
                list-style: none;
                display: flex;
                flex-wrap: wrap;
                gap: 0.5rem;
            }
            .achievement-item {
                display: flex;
                align-items: center;
                background: var(--theme-bg-light);
                border-radius: 6px;
                padding: 0.5rem;
                width: calc(50% - 0.25rem);
                transition: transform 0.3s ease;
            }
            .achievement-item:hover {
                transform: scale(1.05);
            }
            .achievement-icon {
                font-size: 18px;
                margin-right: 0.5rem;
                color: var(--theme-primary-blue);
            }
            .achievement-details p {
                font-size: 0.9rem;
                font-weight: 500;
                color: var(--theme-text-dark);
                margin: 0;
            }
            .achievement-details span {
                font-size: 0.8rem;
                color: #6B7280;
            }
    
            /* === Footer Styles === */
            .footer {
                background: var(--theme-bg-white);
                padding: 1.5rem 0;
                border-top: 1px solid var(--theme-border-color);
                margin-top: 2rem;
