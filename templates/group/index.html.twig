        }

        .groups-content {
            flex: 1;
            max-width: 1200px;
            margin: 0 auto; /* Centering the content block */
            padding: 2rem;
            background-color: var(--card-header-bg, #fff);
            border-radius: var(--border-radius, 16px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
