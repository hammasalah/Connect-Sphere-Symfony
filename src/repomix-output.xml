                    // Si l'utilisateur n'a pas encore Ã©tÃ© pÃ©nalisÃ© pour cette pÃ©riode
                    if (!$dejapenalise) {
                        // Retirer 50 points pour inactivitÃ©
                        $this->pointsService->removePoints($user, 50, '14 Days Absence');
                        $penalizedCount++;
